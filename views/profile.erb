<% if flash[:success] %>
	<div class="alert alert-success"><%= flash[:success]  %></div>
<% elsif flash[:error] %>
	<p class="alert alert-danger"><%= flash[:error]  %></p>
<% end %>
<form action="/profile" method="POST">
	<h4>Tên tài khoản:</h4> <%= user.username %>
	<br/>
	<h4>Mật khẩu cũ:</h4>
	<div class="row">
		<div class="col-sm-6">
			<input type="password" name="oldpassword" class="form-control" />
		</div>
	</div>	
	<h4>Mật khẩu mới:</h4>
	<div class="row">
		<div class="col-sm-6">
			<input type="password" name="newpassword" class="form-control" />
		</div>
	</div>
	<br />
	<div class="row">
		<div class="col-sm-6">
			<input type="submit" value="Đổi mật khẩu" class="btn btn-primary" />
		</div>
	</div>
</form>
